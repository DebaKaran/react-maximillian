{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Node.js Target & Module System
    "target": "ES2020", // Reasonable modern Node target
    "module": "CommonJS", // Or "ESNext" if using ESM (youâ€™re not)
    "moduleResolution": "node",

    // Enable Node types
    "types": ["node"],

    // Optional Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strict & Clean Code
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module Hygiene & Safety
    "esModuleInterop": true, // Allows default import of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
